<h1><a href="/"><i class="fa fa-home" aria-hidden="true"></i></a>&nbsp;|&nbsp;Travel Log</h1>
<h6><a href="/travel/rss"><i class="fa fa-rss" aria-hidden="true"></i>&nbsp;RSS Feed</a>&nbsp;(to subscribe, you need an RSS reader)</h6>
<div class="landing">
<% for post in @posts %>
<div class="card">
  <div class="header">
    <span class="empty-flex-grow"></span>
    <span class="name" id="<%= post[:title] %>"><%= post[:title] %></span>
  </div>
  <div class="date"><span class="fa fa-clock-o"></span>&nbsp;<span><%= post[:formatted_date] %></span></div>
  <div class="text">
    <p>
      <%= post[:excerpt] %>
    </p>
  </div>
  <div class="actions">
    <div><a href="<%= post[:url] %>">Read</a></div>
  </div>
</div>
<% end %>
</div>